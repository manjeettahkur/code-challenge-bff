{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": ".",
      "resolveJsonModule": true,
    },
    "include": ["src/**/*.ts", "tests/**/*.test.ts", "product.json"],
    "exclude": ["node_modules", "dist"]
  }